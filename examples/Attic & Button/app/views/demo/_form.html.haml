=form_tag({:action=>"create", method: :post},{id: 'login-form'}) do
  .form-group
    %label.sr-only{:for => "email"} Email
    = email_field_tag :email, params[:email], placeholder: "Enter email" ,class: 'form-control', id: 'exampleInputEmail1', 'aria-describedby' => 'emailHelp'
  .form-group
    %label.sr-only{:for => "password"} Password
    = password_field_tag :password, params[:password], class: 'form-control', id:'key', placeholder: "Password"
  .checkbox
    %span.character-checkbox{:onclick => "showPassword()"}
    %span.label Show password
  = button_tag 'Log in' , class: 'btn btn-info btn-lg btn-block', id: '#btn-login', type: :submit


:javascript
  showPassword = function() {
    var key_attr;
    key_attr = $('#key').attr('type');
    if (key_attr !== 'text') {
      $('.checkbox').addClass('show');
      $('#key').attr('type', 'text');
    } else {
      $('.checkbox').removeClass('show');
      $('#key').attr('type', 'password');
    }
  };
