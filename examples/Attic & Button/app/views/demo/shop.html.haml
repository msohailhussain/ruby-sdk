.container
  / Example row of columns
  = render "shared/tabs"
  .container
    - if session[:variation_key]
      .card-header.text-center
        Variation: #{session[:variation_key]}
    .row.grid-group
      - @products.each do |product|
        .item.col-xs-3.col-lg-3{style:'margin-bottom:45px;'}
          .thumbnail
            -#%img.img-fluid.group.list-group-image{:alt => "", :src => "#{product[:image_url]}"}/
            = image_tag "#{product[:image_url]}", class: 'img-fluid group list-group-image',style: 'width: 100%;height: 240px;'
            .caption
              %h5.group.inner.list-group-item-heading
                #{product[:name]}
              %p.group.inner.list-group-item-text
                %ul.list-group.list-group-flush
                  %li.list-group-item Color: #{product[:color]}
                  %li.list-group-item Category: #{product[:category]}
              .row
                .col-xs-12.col-md-6
                  %p.lead
                    $#{product[:price]}
                .col-xs-12.col-md-6
                  = link_to "Buy Now",
                  buy_path(user_id: @current_user['user_id'], product_id: product[:id]),
                  method: :post, class:"btn btn-info", remote: true