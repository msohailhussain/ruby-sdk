.container
  = render "shared/tabs"
  .container
    - if session[:checkout_variation_key]
      .card-header.text-center
        Variation: #{session[:checkout_variation_key]}
    .row{style:'padding-top:20px;'}
      .col-md-6
        = render "shipping_form"
      .col-md-5.offset-md-1#CreditCardPartial
        - unless session[:checkout_variation_key] == 'two_step_checkout'
          = render "credit_card_form"

:coffeescript
  jQuery ->
    $('#nextStep').click ->
      $('#CreditCardPartial').html(
        "#{escape_javascript render(partial: 'credit_card_form')}"
      )
      $('#Next-button-grp').hide()